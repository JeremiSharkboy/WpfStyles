<Window
    x:Class="WpfStylesLib.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfStylesLib"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc_s="clr-namespace:WpfStylesLib.UC_s"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="145" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ListBox>
            <ListBoxItem PreviewMouseDoubleClick="TabControls">TabControls</ListBoxItem>
            <ListBoxItem PreviewMouseDoubleClick="RadioButtons">Radio Buttons</ListBoxItem>

        </ListBox>
        <Grid x:Name="Body" Grid.Column="1" />
    </Grid>
</Window>
