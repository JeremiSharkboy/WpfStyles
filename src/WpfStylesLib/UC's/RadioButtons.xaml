<UserControl
    x:Class="WpfStylesLib.UC_s.RadioButtons"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfStylesLib.UC_s"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="White"
    mc:Ignorable="d">
    <StackPanel Width="567">
        <RadioButton
            Content="C#"
            GroupName="Languages"
            IsChecked="True"
            Style="{StaticResource RadioButtonStyleOne}" />
        <RadioButton
            Content="VB.NET"
            GroupName="Languages"
            Style="{StaticResource RadioButtonStyleOne}" />
        <RadioButton
            Content="C++"
            GroupName="Languages"
            Style="{StaticResource RadioButtonStyleOne}" />

        <RadioButton
            Content="WPF"
            GroupName="Technologies"
            Style="{StaticResource RadioButtonStyleOne}" />
        <RadioButton
            Content="WinForms"
            GroupName="Technologies"
            Style="{StaticResource RadioButtonStyleOne}" />
        <RadioButton
            Content="ASP.NET"
            GroupName="Technologies"
            Style="{StaticResource RadioButtonStyleOne}" />
    </StackPanel>

</UserControl>
